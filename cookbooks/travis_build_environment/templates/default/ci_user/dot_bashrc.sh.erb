[ -z "$PS1" ] && return

export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'
export TZ='UTC'

export HISTCONTROL='ignoredups:ignorespace'
shopt -s histappend
export HISTSIZE='1000'
export HISTFILESIZE='2000'

<% unless node['java']['default_version'].empty? -%>
export JAVA_HOME="<%= node['java']['jvm_base_dir'] -%>/<%= node['java'][node['java']['default_version']]['jvm_name'] -%>"
<% end -%>

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

[[ -d "$HOME/.php-build/bin" ]] && export PATH="$HOME/.php-build/bin:$PATH"
[[ -d "$HOME/.phpenv/shims" ]] && export PATH="$HOME/.phpenv/shims:$PATH"

ulimit -n 30000
