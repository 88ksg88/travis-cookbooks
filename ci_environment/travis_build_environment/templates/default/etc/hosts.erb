# Managed by Chef on <%= node.name %> :heart:

127.0.0.1       localhost
127.0.1.1       <%= @hostname %>
# host on which base box was built. Erlang services that use Mnesia
# (like RabbitMQ) may create DB directories with this hostname in the name
# during provisioning and if we change hostname later, they will have all
# kinds of obscure issues. MK.
127.0.0.1       nettuno

# backwards compatibility. MK.
127.0.0.1       travis
127.0.0.1       vagrant

<% unless node['travis_build_environment']['sysctl_disable_ipv6'] %>
<% if node['ip6address'] %>
# The following lines are desirable for IPv6 capable hosts
<% [node['ip6address'], '::1'].each do |addr| %>
<%= addr %> localhost ip6-localhost ip6-loopback <%= @hostname %> travis vagrant nettuno
<% end %>
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
<% end %>
<% end %>
